---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { UI, t } from '../../i18n/strings';
import { WORKPLACES } from '../../content/workplaces';
import TileCard from '../../components/TileCard.astro';
import CareerTimeline from '../../components/CareerTimeline.astro';

const lang = 'en' as const;
---

<BaseLayout lang={lang} title={t(UI.sections.resume, lang)}>
	<div class="timeline-wrapper">
		<CareerTimeline workplaces={WORKPLACES} lang={lang} class="timeline-fullwidth" />
	</div>

	<section class="grid" aria-label="Resume">
		<TileCard
			kind="link"
			title="Experience"
			description={{ en: 'Roles, responsibilities, outcomes.', ru: 'Роли, ответственность, результаты.' }}
			lang={lang}
		/>
		<TileCard
			kind="link"
			title="Skills"
			description={{ en: 'Gameplay, tools, production, collaboration.', ru: 'Геймплей, инструменты, продакшен, коммуникация.' }}
			lang={lang}
		/>
		<TileCard
			kind="link"
			title="Tooling"
			description={{ en: 'Engines, DCC, pipelines, build tools.', ru: 'Движки, DCC, пайплайны, сборка.' }}
			lang={lang}
		/>
	</section>

	<style>
	.timeline-wrapper {
		width: 100vw;
		position: relative;
		left: 50%;
		right: 50%;
		margin-left: -50vw;
		margin-right: -50vw;
		margin-top: 18px;
		margin-bottom: 18px;
	}

	.timeline-wrapper :global(.timeline) {
		max-width: min(1280px, calc(100% - 44px));
		margin: 0 auto;
		border: none;
		padding-left: 22px;
		padding-right: 22px;
	}

		.grid {
			margin-top: 18px;
			display: grid;
			grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
			gap: 0;
		}
	</style>
</BaseLayout>


